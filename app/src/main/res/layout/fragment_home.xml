<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E0F0FF"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_judul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI ARIPA"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_deskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI ARIPA adalah AI yang dirancang untuk memenuhi kebutuhan mahasiswa di FMIPA Unila."
                    android:textSize="14sp"
                    android:textColor="#555555" />
            </LinearLayout>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/logo"
                android:contentDescription="Logo Unila"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/chtbot"
            android:scaleType="fitCenter"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_masuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk ke dalam AI ARIPA"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:backgroundTint="#3688EA"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="162dp"
                    android:layout_height="126dp"
                    android:contentDescription="Tanda Tangan Kegiatan"
                    android:src="@drawable/ttd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pelayanan Tanda Tangan Kegiatan"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="161dp"
                    android:layout_height="128dp"
                    android:contentDescription="Surat Aktif"
                    android:src="@drawable/amplop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pelayanan Surat Aktif Mahasiswa"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="162dp"
                    android:layout_height="119dp"
                    android:contentDescription="Beasiswa"
                    android:src="@drawable/wisuda" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pelayanan Urusan Beasiswa"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="157dp"
                    android:layout_height="119dp"
                    android:contentDescription="Tanda Tangan Transkrip"
                    android:src="@drawable/buku" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pelayanan Tanda Tangan Transkrip"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />
            </LinearLayout>
        </GridLayout>

    </LinearLayout>
</ScrollView>