<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aripa"
    android:padding="24dp">

    <ImageView
        android:id="@+id/welcomeImage"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:contentDescription="Ilustrasi ARIPA"
        android:scaleType="fitCenter"
        android:src="@drawable/wp3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"            app:layout_constraintVertical_bias="0.2"              app:layout_constraintBottom_toTopOf="@+id/welcomeTitle" /> <TextView
    android:id="@+id/welcomeTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="Selamat Datang di ARIPA!"
    android:textColor="#000000"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.496"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/welcomeImage"  app:layout_constraintBottom_toTopOf="@+id/textViewPage3" /> <TextView
    android:id="@+id/textViewPage3"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"                     android:layout_marginTop="12dp"
    android:text="Tidak perlu lagi repot bolak-balik kampus! ARIPA hadir untuk membantumu urus dokumen akademik dan informasi penting hanya lewat satu aplikasi.Lebih cepat, lebih mudah, dan pastinya tanpa ribet!"
    android:textAlignment="center"
    android:textColor="#333333"
    android:textSize="14sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/welcomeTitle" app:layout_constraintBottom_toTopOf="@+id/buttonNextPage3" /> <Button
    android:id="@+id/buttonNextPage3"
    android:layout_width="0dp"
    android:layout_height="62dp"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:layout_marginBottom="24dp"                 android:backgroundTint="#2196F3"
    android:text="SELANJUTNYA"
    android:textColor="#FFFFFF"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/textViewPage3" app:layout_constraintBottom_toBottomOf="parent" />   </androidx.constraintlayout.widget.ConstraintLayout>